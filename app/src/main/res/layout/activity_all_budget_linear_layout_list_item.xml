<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="34sp"
        app:srcCompat="@drawable/box" />

    <LinearLayout
        android:layout_width="297dp"
        android:layout_height="250dp"
        android:layout_marginStart="60sp"
        android:layout_marginTop="120sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/allHistoryDateFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="01.01.2020"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/sunColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/allHistoryDateTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="31.01.2020"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/sunColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/allHistoryUsedSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="12 000"
            android:textSize="18sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/sunColor" />

        <TextView
            android:id="@+id/allHistoryTotalSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="10 000"
            android:textSize="18sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/sunColor" />

        <TextView
            android:id="@+id/allHistoryDifferenceAfter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="-2000"
            android:textSize="18sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/sunColor" />

    </LinearLayout>


</RelativeLayout>