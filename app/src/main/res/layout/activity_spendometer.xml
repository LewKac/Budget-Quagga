<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Spendometer">

    <ImageView
        android:id="@+id/spendometer_background_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/image1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="375dp"
        android:layout_height="157dp"
        android:layout_marginTop="289dp"
        android:background="@drawable/spendometerbackground2"
        android:contentDescription="@string/thisisabackground" />

    <ImageView
        android:id="@+id/spendometerArrow"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="-21dp"
        android:background="@drawable/spendingmeasurerarrow"
        android:contentDescription="@string/spendometerarrow" />

</RelativeLayout>